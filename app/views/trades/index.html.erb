<p id="notice"><%= notice %></p>

<h1>Trades</h1>

<table>
  <thead>
    <tr>
      <th>Symbol</th>
      <th>Timeframe</th>
      <th>Direzione</th>
      <th>Nome micro</th>
      <th>Data micro</th>
      <th>Esecuzione</th>
      <th>Sentiment</th>
      <th>Macropattern</th>
      <th>Rating</th>
      <th>Prezzo entrata</th>
      <th>Prezzo sl</th>
      <th>Resa</th>
      <th>Risultato</th>
      <th>Confidenza</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trades.each do |trade| %>
      <tr class="<%= trade.risultato == "" ? "incompleto" : trade.risultato %>">
        <td><%= trade.symbol %></td>
        <td><%= trade.timeframe %></td>
        <td><%= trade.buy ? "Buy" : "Sell" %></td>
        <td><%= trade.nome_micro %></td>
        <td><%= trade.data_micro.strftime('%F|%H:%M') %></td>
        <td><%= trade.esecuzione %></td>
        <td><%= trade.sentiment %></td>
        <td><%= trade.macropattern %></td>
        <td><%= trade.rating %></td>
        <td><%= trade.prezzo_entrata %></td>
        <td><%= trade.prezzo_sl %></td>
        <td><%= trade.resa %>x</td>
        <td><%= trade.risultato %></td>
        <td><%= trade.confidenza %></td>
        <td><%= link_to 'Show', trade %></td>
        <td><%= link_to 'Edit', edit_trade_path(trade) %></td>
        <td><%= link_to 'Destroy', trade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

